@page
@model bulkyRazor.Pages.Categories.IndexModel
<h1>Category List</h1>

<div class="container">
    <div class="row pt-4 pd-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>   Create New Category
            </a>
        </div>

    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>

        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.Categories)
        {
        <tr>
            <td>
                @obj.Name
            </td>
            <td>@obj.DisplayOrder</td>
            <td><div> <a asp-page="/Categories/Edit"  asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i></a> </div> </td>
                    <td><div> <a asp-page="/Categories/Delete"  asp-route-id="@obj.Id" class="btn btn-danger">  <i class="bi bi-trash"></i></a> </div> </td>
        </tr>
        }
    </tbody>
</table>
</div>