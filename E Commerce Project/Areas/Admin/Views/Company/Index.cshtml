@model List<Company>
<Partial name="_Notfications" />
<div class="container">
    <div class="row pt-4 pd-3">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>   Create New Company
            </a>
        </div>

    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th>
                    Name
                </th>
                <th>
                    Adress
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    PostalCode
                </th>
                <th>
                    Phone Number
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>@obj.StreetAdress</td>
                    <td>@obj.City</td>
                    <td>@obj.State</td>
                    <td>@obj.PostalCode</td>
                    <td>@obj.PhoneNumber</td>
                    <td><div> <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i></a> </div> </td>
                    <td><div> <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">  <i class="bi bi-trash"></i></a> </div> </td>
                </tr>
            }
        </tbody>
    </table>
</div>